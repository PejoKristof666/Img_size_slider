<Window x:Class="Img_size_slider.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Img_size_slider"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <Label Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="2" HorizontalAlignment="Center" Content="Méret"/>
        <Label Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="2" HorizontalAlignment="Center" Content="{Binding Size}"/>
        <Image Grid.Row="1" Grid.Column="1" Grid.RowSpan="2" Grid.ColumnSpan="2" Width="{Binding Width}" Height="{Binding Height}" Stretch="Fill" Source="/View/kutya.png"/>
        <Label Grid.Row="3" Grid.Column="1" Content="Szélesség" Margin="120 0 10 0"/>
        <Slider Grid.Row="3" Grid.Column="2" Value="{Binding Width}" Margin="0 5 0 0" Minimum="10" Maximum="200"/>
        <Label Grid.Row="3" Grid.Column="1" Content="Magasság" Margin="120 50 10 0"/>
        <Slider Grid.Row="3" Grid.Column="2" Value="{Binding Height}" Margin="0 55 0 0" Minimum="18" Maximum="200"/>
        
    </Grid>
</Window>
